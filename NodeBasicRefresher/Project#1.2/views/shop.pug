extends layouts/main-layout.pug 

block content 
        main
            if prods.length > 0
                .grid
                    each product in prods
                        article.card.product-item 
                            header.card__header
                                h1.product__title #{product.title}
                            .card__image
                                img(src="https://i.pinimg.com/originals/b0/52/cc/b052cc5a4eb46f3f6ffe32f451246504.jpg", alt="A Book")
                            .card__content
                                h2.product__price $19.99
                                p.product__description A very interesting book on the great things
                            .card__actions
                                button.btn Add to Cart
            else
                h1 No Products
